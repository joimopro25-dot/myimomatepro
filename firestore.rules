rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(consultantId) {
      return isAuthenticated() && request.auth.uid == consultantId;
    }
    
    function hasValidSubscription() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/subscriptions/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/subscriptions/$(request.auth.uid)).data.status in ['active', 'trial'];
    }
    
    // Consultants
    match /consultants/{consultantId} {
      allow read, create, update: if isOwner(consultantId);
      allow delete: if false;
    }
    
    // Subscriptions
    match /subscriptions/{consultantId} {
      allow read: if isOwner(consultantId);
      allow create: if isOwner(consultantId);
      allow update, delete: if false;
    }
    
    // GLOBAL AGENTS COLLECTION
    match /agents/{agentId} {
      allow read: if isAuthenticated() && 
        resource.data.consultantId == request.auth.uid;
      allow create: if isAuthenticated() && 
        hasValidSubscription() &&
        request.resource.data.consultantId == request.auth.uid;
      allow update: if isAuthenticated() && 
        hasValidSubscription() &&
        resource.data.consultantId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.consultantId == request.auth.uid;
    }
    
    // NESTED AGENTS (consultant-specific view)
    match /consultants/{consultantId}/agents/{agentId} {
      allow read: if isOwner(consultantId);
      allow create, update, delete: if isOwner(consultantId) && hasValidSubscription();
    }
    
    // Agent relationships
    match /consultants/{consultantId}/agent_relationships/{agentId} {
      allow read, write: if isOwner(consultantId);
    }
    
    // Clients
    match /consultants/{consultantId}/clients/{clientId} {
      allow read, write: if isOwner(consultantId) && hasValidSubscription();
    }
    
    // Opportunities
    match /consultants/{consultantId}/clients/{clientId}/opportunities/{opportunityId} {
      allow read, write: if isOwner(consultantId) && hasValidSubscription();
    }
    
    // Deals (direct under clients)
    match /consultants/{consultantId}/clients/{clientId}/deals/{dealId} {
      allow read, write: if isOwner(consultantId) && hasValidSubscription();
    }
    
    // Deals (nested under opportunities)
    match /consultants/{consultantId}/clients/{clientId}/opportunities/{opportunityId}/deals/{dealId} {
      allow read, write: if isOwner(consultantId) && hasValidSubscription();
      
      match /activities/{activityId} {
        allow read, create: if isOwner(consultantId);
        allow update, delete: if false;
      }
      
      match /viewings/{viewingId} {
        allow read, write: if isOwner(consultantId) && hasValidSubscription();
      }
      
      match /offers/{offerId} {
        allow read, write: if isOwner(consultantId) && hasValidSubscription();
      }
    }
    
    // Documents
    match /consultants/{consultantId}/clients/{clientId}/documents/{documentId} {
      allow read, write: if isOwner(consultantId) && hasValidSubscription();
    }
    
    // Activities
    match /consultants/{consultantId}/clients/{clientId}/activities/{activityId} {
      allow read, create: if isOwner(consultantId);
      allow update, delete: if false;
    }
    
    // Public
    match /app_config/{document} {
      allow read: if true;
      allow write: if false;
    }
    
    match /plans/{plan} {
      allow read: if true;
      allow write: if false;
    }
  }
}